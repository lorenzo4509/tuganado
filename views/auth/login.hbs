<div id="login-form" style="max-width: 300px; margin: 0 auto;">
  <h2 style="color: #448755; text-align: center; margin-bottom: 20px;">Log In</h2>
  <form action="/auth/login" method="POST">

    <label style="display: block; margin-bottom: 10px;">Username
      <input type="text" name="username" placeholder="Your username" style="width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #ccc;">
    </label>

    <label style="display: block; margin-bottom: 10px;">Email
      <input type="email" name="email" placeholder="Your email" style="width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #ccc;">
    </label>

    <label style="display: block; margin-bottom: 10px;">Password
      <input type="password" name="password" placeholder="Your password" style="width: 100%; padding: 10px; border-radius: 4px; border: 1px solid #ccc;">
    </label>

    <button type="submit" style="background-color: #448755; color: white; text-decoration: none; padding: 10px 20px; border-radius: 4px; border: none; cursor: pointer;">Log In</button>


    {{#if errorMessage}}
      <p class="error" style="color: red; margin-top: 10px;">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>
